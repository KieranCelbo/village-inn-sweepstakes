{
  "hosting": {
    "site": "cheltenham-sweepstakes",
    "public": ".",
    "ignore": [
      "firebase.json",
      "firestore.rules",
      "proxy.js",
      "package.json",
      "package-lock.json",
      "node_modules",
      "serviceAccountKey.json",
      ".env",
      "README.md",
      "setup-server.sh"
    ],
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/user",
        "destination": "/user.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
}